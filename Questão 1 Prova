print('Olá seja bem vindo !!!')

Nome=str(input('Digite seu nomme: '))
Idade=int(input('Digite sua idade: '))
Salario=float(input('Digite seu salrio'))

print(f'Seu nome é: {Nome}')
print(f'Sua idade é: {Idade} ')
print(f'Seu salario é: {Salario}')

if Salario>1500:
    print('Você tem que trabalhar mais: ')
else:
    print('Sua mãe mandou você estudar: ')
